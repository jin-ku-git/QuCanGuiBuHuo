<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_white_10dp"
    android:padding="@dimen/size_15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="001号"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/color_gray_3"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:background="@drawable/xian_hui_4dp"
        android:padding="@dimen/size_1dp"
>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:background="#F8F8F8"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="套餐名称"
            android:textColor="#ff5f5f5f"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor" />

        <TextView
            android:id="@+id/tvPackegeName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="套餐名称"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F8F8F8"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="清货数量"
                android:textColor="#ff5f5f5f"
                android:textSize="12sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:paddingLeft="15dp"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />


        </LinearLayout>

    </LinearLayout>
    <com.xuexiang.xui.widget.alpha.XUIAlphaButton
        android:id="@+id/determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/login_bg"
        />
    <com.youwu.qucanguibuhuo.jianpan.MyCustKeybords
        android:id="@+id/custKeybords"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:in_needSystem="false"
        android:visibility="gone"/>

</LinearLayout>